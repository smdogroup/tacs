#!/bin/bash

helpstring="

This command will run f5clean_all in all subdirectories that contain .f5 files
"

if [ "$1" == "-h" ]; then
	echo "$helpstring"
	exit 0
fi

COMMAND='f5clean_all'
RootDir=$(pwd)
find . -iname '*.f5' -printf '%h\n' | sort -u | while read i; do
    cd "$i" && pwd && $COMMAND ; cd "$RootDir"
done
